<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - IT Support System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                IT Support System
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- LEFT MENU -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TicketCategories" asp-action="Index">
                            Ticket Categories
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Tickets" asp-action="Index">
                            Tickets
                        </a>
                    </li>
                </ul>

                <!-- RIGHT MENU -->
                <ul class="navbar-nav ms-auto">
                    @if (Context.Session.GetString("UserRole") != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-light">
                                @Context.Session.GetString("UserName")
                                (@Context.Session.GetString("UserRole"))
                            </span>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-warning"
                               asp-controller="Home"
                               asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center">
            &copy; 2026 - IT Support Ticket System
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
